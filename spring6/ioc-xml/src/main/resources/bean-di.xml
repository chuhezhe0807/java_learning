<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    set注入-->
    <bean name="book" class="com.chuhezhe.iocxml.di.Book">
        <property name="author" value="xiaozhang"></property>
        <property name="name" value="bookName"></property>
    </bean>

<!--    构造器注入-->
    <bean name="bookCon" class="com.chuhezhe.iocxml.di.Book">
        <constructor-arg name="author" value="xiaozhang"></constructor-arg>
        <constructor-arg name="name" value="bookName"></constructor-arg>
    </bean>
</beans>